{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:vue/vue3-essential", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "vue/multi-word-component-names": "off",
    "vue/no-use-v-if-with-v-for": "off"
  },
  "ignorePatterns": ["node_modules/*", "dist/*", "scripts/*", ".github/*", ".vscode/*", "public/*", ".eslintrc.json", "*.cjs", "package.json"]
}